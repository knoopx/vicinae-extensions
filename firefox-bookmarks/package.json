{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "type": "module",
  "name": "firefox-bookmarks",
  "title": "Firefox Bookmarks",
  "description": "Integrate bookmarks from Firefox.",
  "icon": "extension-icon.png",
  "author": "thomaslombart",
  "owner": "raycast",
  "access": "public",
  "contributors": [
    "sasivarnan",
    "ahp",
    "juang970",
    "tleo19",
    "jum8ys",
    "Selfish",
    "theherk",
    "zhsks311",
    "daniel-nagy",
    "gewoonseba"
  ],
  "pastContributors": [
    "danulqua"
  ],
  "categories": [
    "Web"
  ],
  "license": "MIT",
  "preferences": [
    {
      "type": "checkbox",
      "label": "Show Bookmark Domain",
      "name": "showDomain",
      "description": "When enabled, the domain of the bookmark will be displayed as a subtitle.",
      "default": true,
      "required": false
    },
    {
      "type": "checkbox",
      "label": "Open in Firefox",
      "name": "openBookmarkBrowser",
      "description": "When enabled, bookmarks will open in Firefox instead of your default browser.",
      "default": false,
      "required": false
    }
  ],
  "commands": [
    {
      "name": "search-firefox-bookmarks",
      "title": "Search Firefox Bookmarks",
      "subtitle": "Firefox Bookmarks",
      "description": "Search bookmarks from your browsers.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.4",
    "@raycast/utils": "^2.2.0",
    "fuse.js": "^7.1.0",
    "ini": "^5.0.0",
    "simple-plist": "^1.3.1",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@raycast/eslint-config": "^2.0.4",
    "@types/ini": "^4.1.1",
    "@types/node": "24.3.0",
    "@types/plist": "^3.0.5",
    "@types/react": "19.1.10",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "3.6.2",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
