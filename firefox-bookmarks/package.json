{
  "$schema": "https://www.raycast.com/schemas/extension.json",

  "name": "firefox-bookmarks",
  "title": "Firefox Bookmarks",
  "description": "Integrate bookmarks from Firefox.",
  "icon": "bookmark",
  "author": "thomaslombart",
  "owner": "raycast",
  "access": "public",
  "contributors": [
    "sasivarnan",
    "ahp",
    "juang970",
    "tleo19",
    "jum8ys",
    "Selfish",
    "theherk",
    "zhsks311",
    "daniel-nagy",
    "gewoonseba"
  ],
  "pastContributors": [
    "danulqua"
  ],
  "categories": [
    "Web"
  ],
  "license": "MIT",
  "preferences": [
    {
      "type": "checkbox",
      "label": "Show Bookmark Domain",
      "name": "showDomain",
      "description": "When enabled, the domain of the bookmark will be displayed as a subtitle.",
      "default": true,
      "required": false
    },
    {
      "type": "checkbox",
      "label": "Open in Firefox",
      "name": "openBookmarkBrowser",
      "description": "When enabled, bookmarks will open in Firefox instead of your default browser.",
      "default": false,
      "required": false
    }
  ],
  "commands": [
    {
      "name": "search-firefox-bookmarks",
      "title": "Search Firefox Bookmarks",
      "subtitle": "Firefox Bookmarks",
      "description": "Search bookmarks from your browsers.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@vicinae/api": "^0.4.0",
    "fuse.js": "^7.1.0",
    "ini": "^5.0.0",
    "simple-plist": "^1.3.1",
    "sql.js": "^1.13.0"
  },

  "scripts": {
    "build": "vici build",
    "dev": "vici develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
